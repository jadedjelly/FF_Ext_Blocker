{
  "manifest_version": 2,
  "name": "Site Access Restrictor",
  "version": "1.1",
  "description": "Restrict website access by time and whitelist.",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": ["block.html"],
  "browser_specific_settings": {
    "gecko": {
      "id": "restrictor@example.com",
      "strict_min_version": "78.0"
    }
  }
}